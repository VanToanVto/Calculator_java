@model WebShop.Models.Role

@{
	ViewData["Title"] = "Thông tin quyền truy cập";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
			<a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item">Danh sách quyền truy cập</a>
			<span class="breadcrumb-item active">Thông tin quyền truy cập</span>
		</nav>
	</div>
</div>
<div class="card">
	<div class="card-body">
		<h1>Thông tin quyền truy cập</h1>
		<hr />
		<div class="col-md-6">
			<table class="product-info-table m-t-20">
				<tbody>
					<tr>
						<td class="card-title">ID:</td>
						<td class="text-dark font-weight-semibold">@Model.RoleId</td>
					</tr>
					<tr>
						<td class="card-title">Tên quyền truy cập:</td>
						<td>@Model.RoleName</td>
					</tr>
					<tr>
						<td class="card-title">Mô tả:</td>
						<td>@Model.Description</td>
					</tr>

				</tbody>
			</table>
			<div class="m-b-15">
				<a class="btn btn-primary m-r-10" asp-action="Index"><i class="anticon anticon-rollback m-r-5"></i><span>Trở về</span></a>
				<a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@Model.RoleId"><i class="anticon anticon-edit m-r-5"></i><span>Chỉnh sửa</span></a>

			</div>
		</div>
	</div>
</div>
