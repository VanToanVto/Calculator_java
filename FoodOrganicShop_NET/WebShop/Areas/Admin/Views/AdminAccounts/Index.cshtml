@model IEnumerable<WebShop.Models.Account>
@{
	ViewData["Title"] = "Danh sách tài khoản quản trị";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
			<span class="breadcrumb-item active">Danh sách tài khoản</span>
		</nav>
	</div>
</div>
<div class="card">
	<div class="card-body">
		<h1>Danh sách tài khoản</h1>
		<hr />
		<div class="row m-b-30">
			<div class="col-lg-8"><div class="d-md-flex"></div></div>
			<div class="col-lg-4 text-right">
				<a class="btn btn-primary" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Create"><i class="anticon anticon-plus-circle m-r-5"></i><span>Thêm mới tài khoản</span></a>
			</div>
		</div>
	</div>
	<div class="table-responsive">
		<table class="table table-hover e-commerce-table">
			<thead>
				<tr>
					<th>ID</th>
					<th>Họ và tên</th>
					<th>Email</th>
					<th>Điện thoại</th>
					<th>Quyền truy cập</th>
					<th>Trạng thái</th>
					<th>Thao tác</th>
				</tr>
			</thead>
			<tbody>
				@if (Model != null)
				{
					foreach (var item in Model)
					{
						<tr>
							<td>@item.AccountId</td>
							<td>
								<div class="d-flex align-items-center">
									<img class="img-fluid rounded" src="assets/images/others/thumb-9.jpg" style="max-width: 60px" alt="">
									<h6 class="m-b-0 m-l-10">@item.FullName</h6>
								</div>
							</td>
							<td><a href="mailto:@item.Email">@item.Email</a></td>
							<td><a href="tel:@item.Phone">@item.Phone</a></td>
							<td>@item.RoleId</td>
							<td>
								@if (item.Active)
								{
									<div class="d-flex align-items-center">
										<div class="badge badge-success badge-dot m-r-10"></div>
										<div>Hoạt động</div>
									</div>
								}
								else
								{
									<div class="d-flex align-items-center">
										<div class="badge badge-danger badge-dot m-r-10"></div>
										<div>Khóa</div>
									</div>
								}
							</td>
							<td>
								<a class="btn btn-info btn-tone m-r-5" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Details" asp-route-id="@item.AccountId"><i class="anticon anticon-info-circle m-r-5"></i><span>Chi tiết</span></a>
								<a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Edit" asp-route-id="@item.AccountId"><i class="anticon anticon-edit m-r-5"></i><span>Chỉnh sửa</span></a>
							</td>
						</tr>
					}
				}
			</tbody>
		</table>
	</div>
</div>
