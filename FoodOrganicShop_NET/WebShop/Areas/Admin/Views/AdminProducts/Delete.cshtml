@model WebShop.Models.Product

@{
	ViewData["Title"] = "Thông tin sản phẩm" + Model.ProductName;
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
			<a asp-area="Admin" asp-controller="AdminProducts" asp-action="Index" class="breadcrumb-item">Danh sách sản phẩm</a>
			<span class="breadcrumb-item active">Xác nhận xóa sản phẩm : @Model.ProductName</span>
		</nav>
	</div>
</div>
<div class="card">
	<div class="card-body">
		<h1>Xóa sản phẩm : @Model.ProductName</h1>
		<hr />
		<div class="table-responsive">
			<table class="product-info-table m-t-20">
				<tbody>
					<tr>
						<td class="card-title">ID:</td>
						<td class="text-dark font-weight-semibold">@Model.ProductId</td>
					</tr>
					<tr>
						<td class="card-title">Tên sản phẩm:</td>
						<td>@Model.ProductName</td>
					</tr>
					<tr>
						<td class="card-title">Mô tả ngắn:</td>
						<td>@Model.ShortDesc</td>
					</tr>
					<tr>
						<td class="card-title">Giá:</td>
						<td>@Model.Price</td>
					</tr>
					<tr>
						<td class="card-title">Discount:</td>
						<td>@Model.Discount</td>
					</tr>
					<tr>
						<td class="card-title">Trạng thái:</td>
						<td>
							@if (Model.Active)
							{
								<div class="switch m-r-10">
									<input type="checkbox" id="switch-1" checked="" disabled />
									<label for="switch-1"></label>
								</div>
							}
							else
							{
								<div class="switch m-r-10">
									<input type="checkbox" id="switch-1" disabled />
									<label for="switch-1"></label>
								</div>
							}
						</td>
					</tr>
					<tr>
						<td class="card-title">Bestseller:</td>
						<td>
							@if (Model.BestSellers)
							{
								<div class="switch m-r-10">
									<input type="checkbox" id="switch-1" checked="" disabled />
									<label for="switch-1"></label>
								</div>
							}
							else
							{
								<div class="switch m-r-10">
									<input type="checkbox" id="switch-1" disabled />
									<label for="switch-1"></label>
								</div>
							}
						</td>
					</tr>
					<tr>
						<td class="card-title">HomeFlag:</td>
						<td>
							@if (Model.HomeFlag)
							{
								<div class="switch m-r-10">
									<input type="checkbox" id="switch-1" checked="" disabled />
									<label for="switch-1"></label>
								</div>
							}
							else
							{
								<div class="switch m-r-10">
									<input type="checkbox" id="switch-1" disabled />
									<label for="switch-1"></label>
								</div>
							}

						</td>
					</tr>
					<tr>
						<td class="card-title">Danh mục:</td>
						<td>@Model.Cat.CatName</td>
					</tr>
					<tr>
						<td class="card-title">Ngày tạo:</td>
						<td>@Model.DateCreated</td>
					</tr>
					<tr>
						<td class ="card-title">Ngày chỉnh sửa:</td>
							<td>@Model.DateModified</td>
					</tr>
					
					<tr>
						<td class="card-title">Ảnh</td>
						<td>
							<img width="200" height="200" src="~/images/products/@Model.Thumb" alt="@Model.Title" />
						</td>
					</tr>
					<tr>
						<td class="card-title">Mô tả sản phẩm:</td>
						<td>@Html.Raw(Model.Description)</td>
					</tr>
					<tr>
						<td class="card-title">Xác nhận xóa:</td>
						<td>
							<form asp-controller="AdminProducts" asp-action="Delete" asp-route-id="@Model.ProductId">
								<input type="hidden" asp-for="ProductId" />
								<input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
							</form>
						</td>
					</tr>

				</tbody>
			</table>
			<a class="btn btn-primary m-r-10" asp-action="Index"><i class="anticon anticon-rollback m-r-5"></i><span>Trở về</span></a>
		</div>
	</div>

</div>

