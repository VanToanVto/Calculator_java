@model WebShop.Models.Product
@{
	ViewData["Title"] = "Tạo mới sản phẩm";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section Styles{
	<link href="~/Adminassets/summernote/summernote-bs4.css" rel="stylesheet" />
	<link href="~/Adminassets/summernote/summernote.css" rel="stylesheet" />
}
<div class="page-header">
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
			<a asp-area="Admin" asp-controller="AdminProducts" asp-action="Index" class="breadcrumb-item">Danh sách sản phẩm</a>
			<span class="breadcrumb-item active">Thêm sản phẩm</span>
		</nav>
	</div>
</div>
<div class="card">
	<div class="card-body">
		<h1>Thêm sản phẩm</h1>
		<hr />
		<form asp-controller="AdminProducts" asp-action="Create" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="page-header no-gutters has-tab">
				<ul class="nav nav-tabs">
					<li class="nav-item">
						<a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Thông tin cơ bản</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" data-toggle="tab" href="#product-edit-option">Cấu hình</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" data-toggle="tab" href="#product-edit-description">Mô tả</a>
					</li>
				</ul>
			</div>
			<div class="tab-content m-t-15">
				<div class="tab-pane fade show active" id="product-edit-basic">
					<div class="card">
						<div class="card-body">
							<div asp-validation-summary="All" class="text-danger"></div>
							<div class="form-group">
								<label class="font-weight-semibold card-title" for="productName">Tên sản phẩm</label>
								<input type="text" class="form-control" asp-for="ProductName" required>
							</div>
							<div class="form-group">
								<label class="font-weight-semibold card-title" for="ShortDesc">Mô tả ngắn</label>
								<input type="text" class="form-control" asp-for="ShortDesc" required>
							</div>
							<div class="row">
								<div class="form-group col-md-6">
									<label class="font-weight-semibold card-title" for="productPrice">Giá bán</label>
									<input type="text" class="form-control" asp-for="Price" required>
								</div>
								<div class="form-group col-md-6">
									<label class="font-weight-semibold card-title" for="productPrice">Discount</label>
									<input type="text" class="form-control" asp-for="Discount" required>
								</div>
							</div>
							<div class="row">
								<div class="form-group col-6">
									<label class="font-weight-semibold card-title" for="productCategory">Danh mục sản phẩm</label>
									<select class="custom-select" asp-for="CatId" style="min-width: 200px;" asp-items="ViewBag.DanhMuc">
										<option value="" disabled selected>Chọn danh mục</option>
									</select>
								</div>
								<div class="form-group col-6">
									<label class="font-weight-semibold card-title" for="productName">Số lượng trong kho</label>
									<input type="text" class="form-control" asp-for="UnitsInStock" required>
								</div>
							</div>
							<div class="form-group">
								<label class="font-weight-semibold card-title" for="productBrand">Ảnh</label>
								<input name="fThumb" type="file" class="form-control-file" asp-for="Thumb" required />
								<span asp-validation-for="Thumb" class="text-danger"></span>
							</div>
							<div class="row">
								<div class="m-t-25">
									<div class="form-group d-flex align-items-center">
										<div class="switch m-r-10">
											<input type="checkbox" asp-for="Active" checked="">
											<label for="Active"></label>
										</div>
										<label class="card-title">Public</label>
									</div>
									<div class="form-group d-flex align-items-center">
										<div class="switch m-r-10">
											<input type="checkbox" asp-for="HomeFlag">
											<label for="HomeFlag"></label>
										</div>
										<label class="card-title">HomeFlag</label>
									</div>
									<div class="form-group d-flex align-items-center">
										<div class="switch m-r-10">
											<input type="checkbox" asp-for="BestSellers">
											<label for="BestSellers"></label>
										</div>
										<label class="card-title">BestSellers</label>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="tab-pane fade" id="product-edit-option">
					<div class="card">
						<div class="card-body">
							<div class="form-group">
								<label class="font-weight-semibold" for="productSize">Title</label>
								<input type="text" class="form-control" asp-for="Title" required>
							</div>
							<div class="form-group">
								<label class="font-weight-semibold" for="productColors">MetaDesc</label>
								<input type="text" class="form-control" asp-for="MetaDesc" required>
							</div>
							<div class="form-group">
								<label class="font-weight-semibold" for="productFit">MetaKey</label>
								<input type="text" class="form-control" asp-for="MetaKey" required>
							</div>
							<div class="form-group">
								<label class="font-weight-semibold" for="productFit">Tags</label>
								<input type="text" class="form-control" asp-for="Tags" required>
							</div>
						</div>
					</div>
				</div>
				<div class="tab-pane fade" id="product-edit-description">
					<div class="card">
						<div class="card-body">
							<textarea class="summernote" asp-for="Description" required></textarea>
						</div>
					</div>
				</div>
				<div class="d-md-flex m-b-15 align-items-center justify-content-between">
					<div class="m-b-15">
						<button class="btn btn-primary m-r-10">
							<i class="anticon anticon-save m-r-5"></i>
							<span>Lưu</span>
						</button>
						<a class="btn btn-primary m-r-10" asp-action="Index"><i class="anticon anticon-rollback m-r-5"></i><span>Trở về</span></a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
@section Scripts{
	<script src="~/Adminassets/vendors/select2/select2.min.js"></script>
	<script src="~/Adminassets/js/pages/e-commerce-product-edit.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.min.js"></script>
	<script src="~/Adminassets/summernote/summernote-bs4.js"></script>
	<script>
		jQuery(document).ready(function () {
			$('.summernote').summernote({
				fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
				styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5'],
				height: 200,
				minHeight: null,
				maxHeight: null,
				focus: true
			});
		});
	</script>
}