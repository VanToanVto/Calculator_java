@model WebShop.Models.Category
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
			<a asp-area="Admin" asp-controller="AdminCategories" asp-action="Index" class="breadcrumb-item">Danh sách danh mục</a>
			<span class="breadcrumb-item active">Xác nhận xóa danh mục: @Model.CatName</span>
		</nav>
	</div>
</div>
<div>
	<div class="card">
		<div class="card-body">
			<h1>Xóa danh mục</h1>
			<hr />
			<div class="page-header no-gutters has-tab">
				<div class="d-md-flex m-b-15 align-items-center justify-content-between">
					<div class="media align-items-center m-b-15">
						<div class="avatar avatar-image rounded" style="height:70px; width:70px">
							<img src="~/images/category/@Model.Thumb" alt="@Model.CatName" />
						</div>
						<div class="m-l-15">
							<h4 class="m-b-0">@Model.CatName</h4>
							<p class="text-muted m-b-0">ID: #@Model.CatId</p>
						</div>
					</div>
				</div>
			</div>
			<div class="table-responsive">
				<table class="product-info-table m-t-20">
					<tbody>
						<tr>
							<td class="card-title">Tên danh mục</td>
							<td>@Model.CatName</td>
						</tr>
						<tr>
							<td class="card-title">Mô tả</td>
							<td>@Html.Raw(Model.Description)</td>
						</tr>
						<tr>
							<td class="card-title">Ảnh</td>
							<td>
								<img src="~/images/category/@Model.Thumb" alt="@Model.CatName" />
							</td>
						</tr>
						<tr>
							<td class="card-title">Trạng thái:</td>
							<td>
								@if (Model.Published)
								{
									<div class="switch m-r-10">
										<input type="checkbox" id="switch-1" checked="" disabled />
										<label for="switch-1"></label>
									</div>
								}
								else
								{
									<div class="switch m-r-10">
										<input type="checkbox" id="switch-1" disabled />
										<label for="switch-1"></label>
									</div>
								}
							</td>
						</tr>
						<tr>
							<td class="card-title">Ordering</td>
							<td>@Model.Ordering</td>
						</tr>
						<tr>
							<td class="card-title">Xác nhận xóa</td>
							<td>
								<form asp-action="Delete">
									<input type="hidden" asp-for="CatId" />
									<input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
								</form>
							</td>
						</tr>
					</tbody>
				</table>
				<div class="m-b-15">
					<a class="btn btn-primary m-r-10" asp-action="Index"><i class="anticon anticon-rollback m-r-5"></i><span>Trở về</span></a>
				</div>
			</div>
		</div>
	</div>
</div>
