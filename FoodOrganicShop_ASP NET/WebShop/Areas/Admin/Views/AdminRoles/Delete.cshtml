@model WebShop.Models.Role
@{
	ViewData["Title"] = "Xác nhận xóa quyền truy cập";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
			<a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item ">Danh sách quyền truy cập</a>
			<span class="breadcrumb-item active">Xác nhận xóa quyền truy cập</span>
		</nav>
	</div>
</div>
<div class="card">
	<div class="card-body">
		<h1>Xác nhận xóa quyền truy cập</h1>
		<hr />
		<div class="col-md-6">
		<table class="product-info-table m-t-20 table-responsive">
			<tbody>
				<tr>
					<td class="card-title">ID:</td>
					<td class="text-dark font-weight-semibold">@Model.RoleId</td>
				</tr>
				<tr>
					<td class="card-title">Tên quyền truy cập:</td>
					<td>@Model.RoleName</td>
				</tr>
				<tr>
					<td class="card-title">Mô tả:</td>
					<td>@Model.Description</td>
				</tr>
				<tr>
					<td class="card-title">Xác nhận xóa:</td>
					<td>
						<form asp-action="Delete" asp-route-id="@Model.RoleId">
							<input type="hidden" asp-for="RoleId" />
							<input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
						</form>
					</td>
				</tr>
			</tbody>
		</table>
		<div>
			<a class="btn btn-primary" asp-action="Index"><i class="anticon anticon-rollback m-r-5"></i><span>Trở về</span></a>
		</div>
	</div>
	</div>
</div>
