@model WebShop.Models.Role

@{
    ViewData["Title"] = "Thêm quyền truy cập";
}


<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active">Thêm quyền truy cập</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
<h1>Thêm quyền truy cập</h1>
<hr />


<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label card-title">Tên quyền truy cập</label>
                <input asp-for="RoleName" class="form-control"  required />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label card-title">Mô tả</label>
                <input asp-for="Description" class="form-control" required />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm mới" class="btn btn-primary m-r-10" />
                <a class="btn btn-primary m-r-10" asp-action="Index">Trở về</a>
            </div>
        </form>
    </div>
</div>
</div>
</div>


